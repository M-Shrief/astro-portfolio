---
import { ViewTransitions, fade,slide } from "astro:transitions";
import type { CollectionEntry } from "astro:content";
// Layout
import MainLayout from "./MainLayout.astro";
// Components
import Footer from "../components/footer.astro";
import CommentBox from "../components/commentBox.astro";
// Styles
import "../assets/base.css";
import type { MarkdownHeading } from "astro";

type Props = {
  data: CollectionEntry<"blog">["data"],
  headings: MarkdownHeading[]
};

const { title, description, pubDate, updatedDate, heroImage } = Astro.props.data;
const headings = Astro.props.headings
---

<MainLayout title="Blogs">
  <main transition:name="blog" transition:animate={slide({duration: '0.4s'})}>
    <aside>
      <h3>Table of Content</h3>
      {
        headings.map(head => (
          <a href={`#${head.slug}`} style={`margin-left: ${head.depth * 0.5}rem`}>
            <p>{head.text}</p>
          </a>
        ))
      }
      <span id="date">Published at: {pubDate.toUTCString().slice(0, 16)}</span>
    </aside>
    <article>
      <slot />
    </article>
  </main>
  <CommentBox repo={'M-Shrief/site'} />

  <Footer />
</MainLayout>

<style lang="scss" >
  main {
    width: 95%;
    margin: 1rem auto;
    position: relative;
    display: flex;
    justify-content: space-between;
    overflow: hidden;
    article {
      p {
        padding-left: 0.5rem;
        font-size: 1.15rem;
      }

      li {
        font-size: 1.1rem;
      }

      a {
        text-decoration: underline;
        font-weight: 600;
        color: var(--text1);
      }

      code {
        border-radius: 1rem;
        padding: 1rem;
        span {
          padding: 0.5rem 0;
          display: inline-block;
          font-size: 1rem;
        }
      }
    }
    aside {
      min-width: 15%;
      display: flex;
      flex-direction: column;
      align-content: center;
      a, p {
        margin: 0.1rem 0;
        padding: 0.1rem 0;
      }
      a {
        text-decoration: none;
        color: var(--text1);
        &:hover {
          text-decoration: underline;
        }
      }
      #date {
        margin-top: 2rem;
        font-size: 1rem;
      }
    }
  }
</style>